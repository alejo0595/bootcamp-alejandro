{%- comment -%}Alejandro Custom modfication: Adding aligment and font properties variables {%- endcomment -%}
{%- liquid
  if items_per_row == 2
    assign col_class = 'half'
  elsif items_per_row == 3
    assign col_class = 'third'
  elsif items_per_row == 5
    assign col_class = 'fifth'
  else
    assign col_class = 'quarter'
  endif

  if settings.coll_card_image_fit == 'cover'
    assign cover = true
  else
    assign cover = false
  endif

  if collection_card_title_alignment
  capture collection_card_title_alignment_class
    echo collection_card_title_alignment | prepend: 'text-'
  endcapture
endif

if collection_card_title_font_parameters
  assign collection_card_title_font_class = 'mycustom-collection_list-collection_card_title-font'
endif

-%}

<div class="card card--collection column {{ col_class }}"{% if animate %} data-cc-animate="cc-fade-in-up" data-cc-animate-delay="{{ animate | times: 0.15 }}s"{% endif %}>
  <div class="card__image">
    {%- if image != null -%}
      {% render 'card-image',
        img: image,
        aspect_ratio: aspect_ratio,
        cover: cover,
        items_per_row: items_per_row
      %}
    {%- else -%}
      <div class="placeholder-wrapper"{% if aspect_ratio %} style="padding-top: {{ 1 | divided_by: aspect_ratio | times: 100 }}%;"{% endif %}>
        {%- capture placeholder_svg_name -%}collection-{{ 'now' | date: '%N' | modulo: 6 | plus: 1 }}{%- endcapture -%}
        {{ placeholder_svg_name | placeholder_svg_tag: 'placeholder' }}
      </div>
    {%- endif -%}
  </div>
  <div class="card__content">
    {%- comment -%}Alejandro Custom Modification: Adding aligment and font properties {%- endcomment -%}
    <h3 class="card__title {{ collection_card_title_alignment_class }} {{ collection_card_title_font_class }}">
      <a href="{{ collection.url }}" class="card__link">{{ collection.title }}</a>
    </h3>
  </div>
</div>
