{%- comment -%}
  Alejandro Custom Modification: 
  -Add a local media query for column classes when width < 768px
{%- endcomment -%}
{%- style -%}
  {% assign grid_gutter = 40 %}
  @media (max-width: 768px){
    .column.half,.column.third,
    .column.quarter,.column.fifth,
    .column.sixth {
      width: calc(100% - {{ grid_gutter }}px) !important;
    }    
  }
  
  #{{ section.id }} .mycustom-logo_list-border{
    border-top: 2px solid rgba(0,0,0,0.1);
    border-bottom: 2px solid rgba(0,0,0,0.1);
  }

  #{{ section.id }} .mycustom-logo_list-font {
    font-size: {{ section.settings.mycustom_icon_title_font_size }}rem !important;
    {%- if section.settings.mycustom_icon_title_font_weight -%}
      font-weight: 500 !important;
    {%- endif -%}
  }

{%- endstyle -%}

{%- if section.settings.heading != blank or section.blocks.size > 0 -%}
  {%- liquid
    
    if section.blocks.size == 6
      assign col_class = 'sixth'
    elsif section.blocks.size == 5
      assign col_class = 'fifth'
    elsif section.blocks.size == 4
      assign col_class = 'quarter'
    elsif section.blocks.size == 3
      assign col_class = 'third'
    elsif section.blocks.size == 2
      assign col_class = 'half'
    else
      assign col_class = 'full'
    endif

    assign image_height = 0
    for block in section.blocks
      if block.settings.image != blank
        assign h = section.settings.icon_size | divided_by: block.settings.image.aspect_ratio | round
        if h > image_height
          assign image_height = h
        endif
      else
        if section.settings.icon_size > image_height
          assign image_height = section.settings.icon_size
        endif
      endif
    endfor
  -%}

  {%- unless section.settings.color_scheme == 'none' -%}
    {%- liquid
      if section.settings.color_scheme == 'scheme-1'
        assign bg_color = settings.col_scheme_1_bg
      elsif section.settings.color_scheme == 'scheme-2'
        assign bg_color = settings.col_scheme_2_bg
      else
        if section.settings.color_bg == blank or section.settings.color_bg contains ',0'
          assign bg_color = settings.col_page_bg
        else
          assign bg_color = section.settings.color_bg
        endif
        unless section.settings.color_heading == blank or section.settings.color_heading contains ',0'
          assign heading_color = section.settings.color_heading
        endunless
        if section.settings.color_text == blank or section.settings.color_text contains ',0'
          assign text_color = settings.col_text
        else
          assign text_color = section.settings.color_text
        endif
      endif
    -%}
  {%- endunless -%}

  {%- style -%}
    #{{ section.id }} .logo-list__image {
      width: {{ section.settings.icon_size }}px; height: {{ image_height }}px;
    }
    #{{ section.id }} .logo-list__image > svg {
      width: {{ section.settings.icon_size }}px; height: {{ section.settings.icon_size }}px;
    }
    {%- if section.settings.color_scheme == 'custom' -%}
      #{{ section.id }} { background-color: {{ bg_color }}; color: {{ text_color }}; }
      {%- if section.settings.heading != blank and heading_color -%}
        #{{ section.id }} .section-heading { color: {{ heading_color }}; }
      {%- endif -%}
    {%- endif -%}
  {%- endstyle -%}

  <div id="{{ section.id }}" class="logo-list {% if bg_color == settings.col_page_bg or section.settings.color_scheme == 'none' %}spaced-section{% else %}padded-section{% endif %}{% if section.settings.color_scheme == 'scheme-1' or section.settings.color_scheme == 'scheme-2' %} color-{{ section.settings.color_scheme }}{% endif %} ">
    <div class="container align-center mycustom-logo_list-border py-5">
      {%- if section.settings.heading != blank -%}
        <h2 class="section-heading" data-cc-animate>
          {{ section.settings.heading | escape }}
        </h2>
      {%- endif -%}
      <div class="grid grid--row-gutters">
        {%- for block in section.blocks -%}
          <div class="column {{ col_class }}" data-cc-animate data-cc-animate-delay="{{ forloop.index | times: 0.1 }}s" {{ block.shopify_attributes }}>
            {%- if block.settings.url != blank -%}
              <a class="logo-list__link" href="{{ block.settings.url }}">
            {%- endif -%}

            <div class="logo-list__image">
              {%- if block.settings.image != blank -%}
                {%- assign img = block.settings.image -%}
                <img data-srcset="{%- if img.width < 100 %}{{ img | image_url }} {{ img.width }}w{% endif -%}
                                  {%- if img.width >= 100 %}{{ img | image_url: width: 100 }} 100w{% endif -%}
                                  {%- if img.width >= 200 %}, {{ img | image_url: width: 200 }} 200w{% endif -%}
                                  {%- if img.width >= 400 %}, {{ img | image_url: width: 400 }} 400w{% endif -%}"
                      data-src="{{ img | image_url: width: 200 }}"
                      data-sizes="auto"
                      class="lazyload"
                      width="{{ img.width }}"
                      height="{{ img.height }}"
                      alt="{{ img.alt | escape }}">
                <noscript>
                  <img src="{{ img | image_url: width: 200 }}" width="{{ img.width }}" height="{{ img.height }}" alt="{{ img.alt | escape }}">
                </noscript>
              {%- else -%}
              {%- comment -%} Custom modification: Add several svg icons {%- endcomment -%}
              {%- render: 'mycustom-icon_list', name: block.settings.icon, color: block.settings.mycustom_icon_color -%}
              {%- endif -%}
            </div>
            {%- if block.settings.title != blank -%}
              {%- comment -%}{%- endcomment -%}
              <div class="mycustom-logo_list-font logo-list__caption{% if section.settings.enlarge_text %} large-text{% endif %}">
                {{ block.settings.title }}
              </div>
            {%- endif -%}

            {%- if block.settings.url != blank -%}
              </a>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
{%- endif -%}

